      /usr/X11R6/lib*/modules/*.uc
  endif
    /usr/X11R6/lib*/modules/lib*.a
  endif

  xshared:
    /usr/X11R6/lib*/lib{X11,Xext}.so*
    /usr/X11R6/lib*/lib{SM,ICE}.so*
    /usr/X11R6/lib*/lib{Xmu,Xi,Xt,Xft,Xrender,Xpm}.so*
