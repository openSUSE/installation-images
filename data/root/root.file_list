d bin dev etc lib lib64 mnt root sbin tmp usr var
c 1777 0 0 tmp

# add some /etc files
x /etc/* /etc
r /etc/ssh
r /etc/CVS /etc/rpm/CVS /root/.ssh/CVS
r /etc/inst_setup

